        mywindow.document.write("<from><p>hey,bro!这里是登录中心</p><p>用户名：</p><input type='text' placeholder='请输入账号'></br><p>密码：</p><input type='password' value=''></br></br><input type='submit' value='登录'>");
        mywindow.focus();
        mywindow.document.body.style.backgroundColor = 'dimgray'
    }
    function openwin2(){
        mywindow=window.open('','', 'width=200,height=250');
        mywindow.document.write("<from><p>hey,bro!这里是注册中心</p><p>用户名：</p><input type='text' placeholder='请输入账号'></br><p>密码：</p><input type='password' value=''></br></br><input type='submit' value='注册'>");
        mywindow.focus();
        mywindow.document.body.style.backgroundColor = 'slategrey'
    }
</script>
